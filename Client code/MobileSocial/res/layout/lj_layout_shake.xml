<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lj_shake_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lj_shake_ball_layout"
        android:background="#000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_centerInParent="true" >

        <com.lj.shake.ShakeBall
            android:id="@+id/lj_shake_ball"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/lj_shake_ball" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lj_map_male_female_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/lj_map_male"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lj_map_male_unselect" />

        <ImageView
            android:id="@+id/lj_map_female"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/lj_map_female_unselect" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lj_map_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <com.lj.shake.RelativeLayoutUserInfoList
            android:id="@+id/lj_map_userinfo"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>