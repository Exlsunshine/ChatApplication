<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_activity_item_comment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/publicactivityadpter_comment_photo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingTop="6.0dip" >

        <ImageView
            android:id="@+id/publicactivityadpter_comment_profile_photo2"
            android:layout_width="38.0dip"
            android:layout_height="38.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/publicactivityadpter_comment_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/publicactivityadpter_comment_photo2"
        android:paddingBottom="6.0dip"
        android:paddingTop="6.0dip" >

        <TextView
            android:id="@+id/publicactivityadpter_comment_body2"
            style="@style/feed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/publicactivityadpter_comment_sub2"
            style="@style/feed_subtext_on_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/publicactivityadpter_comment_body2"/>
    </RelativeLayout>

    <include
        android:id="@+id/tp_feed_comments_comment_divider2"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/publicactivityadpter_comment_content2"
        layout="@layout/tp_bubble_item_divider"
        android:visibility="visible" />

</RelativeLayout>