<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/yg_friendlist_actionbar_default_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/yg_friendlist_actionbar_default_layout_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Friends"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <SearchView
            android:id="@+id/yg_friendlist_actionbar_default_layout_search"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:queryHint="Try a firend name :)" >
        </SearchView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yg_friendlist_actionbar_result_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#1E90FF"
        android:visibility="gone" >

        <TextView
            android:id="@+id/yg_friendlist_actionbar_result_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Eddie(3)"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/yg_friendlist_actionbar_result_layout_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/ic_input_delete"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

</FrameLayout>