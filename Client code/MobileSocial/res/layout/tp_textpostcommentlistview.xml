<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commentListView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/textpostcommentlistview_comment_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="6.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingTop="6.0dip" >

        <ImageView
            android:id="@+id/textpostcommentlistview_tp_userportrait"
            android:layout_width="38.0dip"
            android:layout_height="38.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6.0dip"/>

        <!-- <ImageView
            android:id="@+id/textpostcommentlistview_comment_portrait1"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_alignBottom="@id/textpostcommentlistview_tp_userportrait"
            android:layout_alignLeft="@id/textpostcommentlistview_tp_userportrait"
            android:layout_alignRight="@id/textpostcommentlistview_tp_userportrait"
            android:layout_alignTop="@id/textpostcommentlistview_tp_userportrait"
            android:background="@drawable/tp_comment_avatar" /> -->

        <TextView
            android:id="@+id/textpostcommentlistview_commentContent"
            style="@style/feed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textpostcommentlistview_tp_userportrait"/>
        
		<ImageView 
		    android:id="@+id/textpostcommentlistview_postphoto"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/textpostcommentlistview_tp_userportrait"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/textpostcommentlistview_commentTime"
            style="@style/feed_subtext_on_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textpostcommentlistview_commentContent"
            android:layout_toRightOf="@id/textpostcommentlistview_tp_userportrait"/>
    </RelativeLayout>

</RelativeLayout>