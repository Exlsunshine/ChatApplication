<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottle_night_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/lj_bottle_info_img"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/lj_bottle_info_history"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottle_stationery"
            android:gravity="top" />

        <EditText
            android:id="@+id/lj_bottle_info_append"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/bottle_stationery"
            android:gravity="top" />

        <Button
            android:id="@+id/lj_bottle_info_reply"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="reply" />
    </LinearLayout>

</ScrollView>