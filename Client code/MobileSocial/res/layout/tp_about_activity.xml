<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tp_about_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_item_bg"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/tp_about_buttonlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:alpha="0.9"
        android:background="@layout/tp_about_background"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tp_about_weibo_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tp_logo_weibo"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <ImageView
                android:id="@+id/tp_about_wechat_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/tp_logo_wechat"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <ImageView
                android:id="@+id/tp_about_qq_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tp_logo_qq"
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tp_about_copyBoard_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tp_logo_copyboard"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <ImageView
                android:id="@+id/tp_about_email_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/tp_logo_messege"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <ImageView
                android:id="@+id/tp_about_friendcircle_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tp_logo_friendcircle"
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/tp_about_renren_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/tp_logo_renren"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/tp_about_activity_mask"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.3"
        android:background="#000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/tp_about_activity_blur"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/tp_about_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" >

        <ImageView
            android:id="@+id/tp_app_icon_iv"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="40dip"
            android:src="@drawable/lancher_icon" />

        <TextView
            android:id="@+id/tp_appabout_appname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tp_app_icon_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:text="Mystery"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tp_appabout_appversion_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tp_appabout_appname_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Version1.0.0"
            android:textColor="#8D8884"
            android:textSize="11sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tp_app_copyright"
            android:layout_below="@+id/tp_appabout_appversion_tv" >

            <Button
                android:id="@+id/tp_about_update_btn"
                style="@style/loginguide_page3_login_btn_style"
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tp_about_recommand_btn"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dip"
                android:text="检查更新"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tp_about_recommand_btn"
                style="@style/loginguide_page3_login_btn_style"
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dip"
                android:text="推荐好友"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tp_about_policy_btn"
                style="@style/loginguide_page3_login_btn_style"
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tp_about_recommand_btn"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dip"
                android:text="服务条款"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tp_app_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="ⓒcopyright, all rights reserved.\n北京工业大学"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>