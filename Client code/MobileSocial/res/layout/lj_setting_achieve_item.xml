<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/lj_setting_achieve_itembackground"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/lj_setting_achieve_item_medal"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:scaleType="fitCenter"
        android:src="@drawable/lj_setting_achieve_medal_zero"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lj_setting_achieve_item_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="title"
            android:textSize="@dimen/lj_userinfo_text_size" />

        <TextView
            android:id="@+id/lj_setting_achieve_item_des"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="des"
            android:textSize="@dimen/lj_userinfo_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/lj_setting_achieve_item_star"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/lj_setting_achieve_star_zero" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <ProgressBar
                android:id="@+id/lj_setting_achieve_item_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:max="30"
                android:progress="0"
                android:progressDrawable="@drawable/lj_progressbar_style" />
            <TextView 
                android:id="@+id/lj_setting_achieve_item_progress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:text="0/30"
                android:textColor="@color/white"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>