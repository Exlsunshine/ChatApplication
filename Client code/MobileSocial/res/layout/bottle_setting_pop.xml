<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/lj_setting_pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_style_alert_dialog_background" >

        <Button
            android:id="@+id/bottle_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/register"
            android:text="拍照"
            android:textColor="#000000" />

        <Button
            android:id="@+id/bottle_localPic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottle_photo"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/register"
            android:text="选择本地图片"
            android:textColor="#000000" />

        <Button
            android:id="@+id/bottle_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottle_localPic"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/cencel_login"
            android:text="取消"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>